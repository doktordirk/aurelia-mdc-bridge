template

  // ICON TOGGLE
  button.mdc-icon-button(ref="button")
    i.mdc-icon-button__icon.material-icons(
      style="margin: 0; padding: 0; outline: none;"
      aria-pressed="${on}"
      aria-label="${ariaLabelOff}" 
      tabindex="0"
      data-toggle-on='{"label": "${ariaLabelOn}", "content": "${iconOn}"}'
      data-toggle-off='{"label": "${ariaLabelOff}", "content": "${iconOff}"}') ${iconOff}
    i.mdc-icon-button__icon.material-icons.mdc-icon-button__icon--on(
      style="margin: 0; padding: 0; outline: none;"
      aria-pressed="${on}"
      aria-label="${ariaLabelOff}" 
      tabindex="0"
      data-toggle-on='{"label": "${ariaLabelOn}", "content": "${iconOn}"}'
      data-toggle-off='{"label": "${ariaLabelOff}", "content": "${iconOff}"}') ${iconOn}
