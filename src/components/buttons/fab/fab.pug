template
  require(from="./fab.css")

  // SAMPLE
  mdc-grid
    mdc-grid-cell(span="12")
      h4 Floating Action Buttons

    // CONFIG AREA
    mdc-grid-cell(span="4")
      mdc-checkbox(checked.bind="mini") mini
      br
      mdc-checkbox(checked.bind="exited") exited
      br
      mdc-checkbox(checked.bind="extended") extended
      br
      mdc-checkbox(checked.bind="shaped") shaped

    // DEMO AREA
    mdc-grid-cell(span="8")
      button(if.bind="!extended" class="${shaped ? 'fab-shaped' : ''}" mdc-fab="exited.bind: exited; mini.bind: mini; aria-label: Star;") star
      button(if.bind="extended"  class="${shaped ? 'fab-shaped-extended' : ''}" mdc-fab="exited.bind: exited; extended.bind: extended; aria-label: Star; label: Favorite;") star
      button.my-fab--fixed(mdc-fab="aria-label: Accessibility;") accessibility


    // LINKS
    mdc-grid-cell(span="12")
      hr
      a(href="https://material.io/components/web/catalog/buttons/floating-action-buttons/" target="_blank" data-analytics-category="external" data-analytics-action="mdc-fab") Material components documentation
      br
      a(href="https://material.io/guidelines/components/buttons-floating-action-button.html" target="_blank" data-analytics-category="external" data-analytics-action="mdg-fab") Material design guidelines
      br
      a(href="https://material.io/icons/" target="_blank" data-analytics-category="external" data-analytics-action="mdc-icons") Icons
      hr

    // EXAMPLE
    mdc-grid-cell(span="12")
      pre
        code-prism.
          &lt;button mdc-fab="aria-label: Star; mini: true; exited: false;"&gt;
            favorite_border
          &lt;/button&gt;

    // EXAMPLE
    mdc-grid-cell(span="12")
      section
        h5 Extended
      pre
        code-prism.
          &lt;button mdc-fab="extended: true; exited: exited; label: Favorite; aria-label: Star;"&gt;
            favorite_border
          &lt;/button&gt;

        // EXAMPLE
    mdc-grid-cell(span="12")
      section
        h5 Shaped
      pre
        code-prism.
          &lt;button class="fab-shaped-extended" mdc-fab="extended: true; label: Favorite; aria-label: Star;"&gt;
            favorite_border
          &lt;/button&gt;
      pre
        code-prism(language="css").
          .fab-shaped {
            @include mdc-fab-shape-radius(8px);
          }

          .fab-shaped-extended {
            @include mdc-fab-extended-shape-radius(50% 0);
          }

    // RIPPLE
    mdc-grid-cell(span="12")
      section
        h5 Ripple
        p.
          By default the ripple effect is added automatically. To avoid that, set ripple to false:
        pre
          code-prism.
            &lt;button mdc-fab="ripple: false;" ...&gt;
              ...
            &lt;/button&gt;
          

    // POSITION
    mdc-grid-cell(span="12")
      section
        h5 Position
        p.
          By default the FAB rests in the page where it sits in the content flow. 
          Developers must position it as-needed within their applications designs.
        pre
          code-prism.
            &lt;style&gt;
              .my-fab--fixed {
                position: fixed;
                bottom: 1rem;
                right: 1rem;
              }

              @media(min-width: 1024px) {
                .my-fab--fixed {
                  bottom: 3rem;
                  right: 5rem;
                }
              }
            &lt;/style&gt;

            &lt;button class="my-fab--fixed" mdc-fab="aria-label: Accessibility;"&gt;
              favorite_border
            &lt;/button&gt;     
